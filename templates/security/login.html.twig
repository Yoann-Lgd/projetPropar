{# {% extends 'base.html.twig' %} #}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Log in!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <style> 
                html {
                    background: linear-gradient(0deg, rgba(32, 212, 137, 0.75), rgba(32, 212, 137, 0.75)),  url({{ asset('build/images/LoginBackground.png') }});
                    background-repeat: no-repeat;
                    background-position: center;
                    margin: 0;
                    padding: 0;
                    width: 100%;
                    height: 100vh;
                } 
                body {
                    width: 100%;
                    height: 100%;
                    display: flex;
                    flex-direction: row;
                    justify-content: flex-end;
                    align-items: center;
                    padding: 0px;
                    position: relative;
                    font-family: Roboto;
                }

                #right {
                    /* Right */

                    /* Auto Layout */
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: center;
                    padding: 0px;

                    width: 100%;

                    /* light */
                    background: #FFFFFF;

                    /* Inside Auto Layout */
                    flex: 0;
                    order: 1;
                    align-self: stretch;
                    flex-grow: 2.6;
                    margin: 0px 0px;
                }
                #right > div {
                    /* Auto Layout */
                    display: flex;
                    flex-direction: column;
                    align-items: flex-start;
                    padding: 0px;
                    width: 404px;

                    /* Inside Auto Layout */
                    flex: none;
                    order: 0;
                    flex-grow: 0;
                    margin: 0px 0px;
                }
                #right > div > .header {
                    /* Auto Layout */
                    display: flex;
                    flex-direction: column;
                    align-items: flex-start;
                    padding: 0px;

                    /* Inside Auto Layout */
                    flex: none;
                    order: 0;
                    flex-grow: 0;
                    margin: 0px 0px;
                }
                #right > div > .header > #titleHeader {
                    font-style: normal;
                    font-weight: 500;
                    font-size: 36px;
                    line-height: 42px;
                    text-align: center;

                    /* dark */
                    color: #022C43;


                    /* Inside Auto Layout */
                    flex: none;
                    order: 0;
                    flex-grow: 0;
                    margin: 6px 0px;
                }
                #right > div > .header > #descriptionHeader {
                    font-style: normal;
                    font-weight: 500;
                    font-size: 18px;
                    line-height: 21px;

                    /* identical to box height */
                    text-align: center;

                    /* dark */
                    color: #022C43;


                    /* Inside Auto Layout */
                    flex: none;
                    order: 1;
                    flex-grow: 0;
                    margin: 6px 0px;
                }
                #descriptionHeader > a {
                    /* secondary */
                    color: #20D489;
                }
                #right > div > form {
                    /* Auto Layout */
                    display: flex;
                    flex-direction: column;
                    align-items: flex-start;
                    padding: 0px;
                    width: 100%;

                    /* Inside Auto Layout */
                    flex: none;
                    order: 1;
                    flex-grow: 0;
                    margin-top: 50px;
                }
                #right > div > form > .group {
                    width: 100%;
                    margin-bottom: 10px;
                }
                #right > div > form > .group > input {
                    /* Auto Layout */
                    display: flex;
                    flex-direction: row;
                    align-items: center;
                    padding: 20px;

                    width: 100%;
                    height: 46px;

                    /* lightGray */
                    background: #F5F8FA;
                    border-radius: 10px;
                    border: none;

                    /* Inside Auto Layout */
                    margin: 0px 0px;
                }

                #right > div > form > button {
                    /* Auto Layout */
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: center;
                    padding: 10px 15px;

                    /*position: static;
                    width: 99px;
                    height: 47px;
                    left: calc(50% - 99px/2 - 152.5px);
                    bottom: 0px;*/

                    /* secondary */
                    background: #20D489;
                    color: #fff;
                    border-radius: 10px;

                    /* Inside Auto Layout */
                    flex: none;
                    order: 1;
                    flex-grow: 0;
                    margin-top: 40px !important;
                }

                #left {
                    /* Right */

                    /* Auto Layout */
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    padding: 50px;

                    width: 100%;


                    /* Inside Auto Layout */
                    flex: 0;
                    order: 1;
                    align-self: stretch;
                    flex-grow: 1;
                    margin: 0px 0px;
                }
                #left > div {
                    /* Auto Layout */
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    padding: 0px;

                    /* Inside Auto Layout */
                    flex: none;
                    order: 0;
                    align-self: stretch;
                    flex-grow: 0;
                }
                #left > div > .title {
                    font-style: normal;
                    font-weight: 900;
                    font-size: 42px;
                    line-height: 49px;
                    text-align: center;

                    /* dark */
                    color: #022C43;


                    /* Inside Auto Layout */
                    flex: none;
                    order: 0;
                    flex-grow: 0;
                    margin: 38px 0px;
                }
                #left > div > .description {
                    font-style: normal;
                    font-weight: 500;
                    font-size: 30px;
                    line-height: 35px;
                    text-align: center;

                    /* light */
                    color: #FFFFFF;


                    /* Inside Auto Layout */
                    flex: none;
                    order: 1;
                    flex-grow: 0;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body id="loginBodyBackground">
        {% block body %}
        <div id="left">
            <div>
                <p class="title">Propar.</p>
                <p class="description">Lorem ipsum dolor sit amet, consectetur </p>
            </div>
        </div>
        <div id="right">
            <div>
                <div class="header">
                    <p id="titleHeader">Bienvenue chez Propar</p>
                    {# <p id="descriptionHeader">Nouveau ici? <a href="{{ path('app_register') }}">Créer un compte</a></p> #}
                </div>
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success d-flex align-items-center" role="alert">
                                <i class="bi bi-check-circle me-2 text-success"></i>
                                <div class="text-success">
                                    {{ message }}
                                </div>
                            </div>
                        {% endfor %}
                        
                        <div class="mb-3">
                            Vous êtes connecté en tant que  {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                        <div class="mb-3">
                            retour, <a href="{{ path('accueil') }}">accueil</a>
                        </div>
                        
                    {% else %}
                    
                    <div class="group">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="email@server.xyz" required autofocus>
                    </div>
                    <div class="group">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="...." required>
                    </div>
                   
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="btn btn-lg btn-secondary mt-3" type="submit">
                        Connexion
                    </button>
                    {% endif %}

                </form>
            </div>
        </div>

        {% endblock %}
    </body>
</html>
