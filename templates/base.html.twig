				<div>
					{% block search %}{% endblock %}
				</div>
				<div class="d-flex flex-row align-items-center">
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<p class="text-black-50">{{ app.user.nom }}
							{{ app.user.prenom }}</p>
						<img src="https://avatars.dicebear.com/api/identicon/{{ app.user.nom }}.{{ app.user.prenom }}.svg" height="32" width="32" alt="..." class="border border-secondary border-2 rounded-2 bg-white mx-3">
					<a href="/logout" class="text-decoration-none text-black-50">
						Déconnexion
					</a>
					{% endif %}
				</div>
			</div>

			<div id="container" class="d-flex flex-column p-5 bg-light"> 
